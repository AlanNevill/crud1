  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome enquiry.php",
      "url": "http://crud1.localhost:80/content/enquiry.php",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch testHarness2.php",
      "type": "chrome",
      "request": "launch",
      "url": "http://crud1.localhost:80/testHarness2.php",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Listen for XDebug",
      "type": "php",
      "request": "launch",
      "port": 9000
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9000
    }
  ]
}
